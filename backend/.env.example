# ==============================================
# SOCIAL MEDIA AUTOMATION PLATFORM
# Environment Variables Template
# ==============================================

# ==============================================
# APPLICATION SETTINGS
# ==============================================
ENVIRONMENT=development
DEBUG=true
LOG_LEVEL=INFO
PROJECT_NAME="Social Media Automation Platform"
VERSION=1.0.0
DESCRIPTION="AI-powered social media automation for US/UK markets"

# ==============================================
# SECURITY SETTINGS
# ==============================================
# Generate with: openssl rand -hex 32
SECRET_KEY=your-secret-key-here-change-this-in-production

# Generate with: from cryptography.fernet import Fernet; print(Fernet.generate_key().decode())
ENCRYPTION_KEY=your-encryption-key-here-change-this-in-production

# JWT Settings
JWT_ALGORITHM=HS256
JWT_ACCESS_TOKEN_EXPIRE_MINUTES=10080
JWT_REFRESH_TOKEN_EXPIRE_DAYS=30

# ==============================================
# DATABASE CONFIGURATION
# ==============================================
# PostgreSQL Database
POSTGRES_DB=social_automation
POSTGRES_USER=postgres
POSTGRES_PASSWORD=your-postgres-password
POSTGRES_HOST=localhost
POSTGRES_PORT=5432

# Full Database URL (auto-generated from above in docker-compose)
DATABASE_URL=postgresql://postgres:your-postgres-password@localhost:5432/social_automation

# ==============================================
# REDIS CONFIGURATION
# ==============================================
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=your-redis-password
REDIS_DB=0
REDIS_URL=redis://:your-redis-password@localhost:6379/0

# ==============================================
# CORS SETTINGS
# ==============================================
CORS_ORIGINS=http://localhost:3000,http://127.0.0.1:3000,https://yourdomain.com

# ==============================================
# REGIONAL SETTINGS
# ==============================================
REGION=US
TIMEZONE_US=America/New_York
TIMEZONE_UK=Europe/London
DEFAULT_CURRENCY_US=USD
DEFAULT_CURRENCY_UK=GBP

# ==============================================
# AI SERVICE APIs
# ==============================================
# Google Gemini API
GEMINI_API_KEY=your-gemini-api-key-here
GEMINI_MODEL=gemini-pro
GEMINI_VISION_MODEL=gemini-pro-vision

# OpenAI API (for DALL-E)
OPENAI_API_KEY=your-openai-api-key-here
OPENAI_MODEL=gpt-4
DALLE_MODEL=dall-e-3

# ==============================================
# FACEBOOK GRAPH API
# ==============================================
FACEBOOK_APP_ID=your-facebook-app-id
FACEBOOK_APP_SECRET=your-facebook-app-secret
FACEBOOK_GRAPH_API_VERSION=v19.0
FACEBOOK_GRAPH_API_URL=https://graph.facebook.com

# ==============================================
# EMAIL SERVICE (SMTP)
# ==============================================
# Email Configuration (for notifications, password resets)
EMAIL_SMTP_HOST=smtp.gmail.com
EMAIL_SMTP_PORT=587
EMAIL_USERNAME=your-email@gmail.com
EMAIL_PASSWORD=your-app-password
EMAIL_FROM=noreply@yourdomain.com
EMAIL_USE_TLS=true

# ==============================================
# RATE LIMITING
# ==============================================
RATE_LIMIT_PER_MINUTE=60
RATE_LIMIT_PER_HOUR=1000
RATE_LIMIT_ENABLED=true

# ==============================================
# CONTENT GENERATION LIMITS
# ==============================================
# Default plan limits
FREE_PLAN_POST_LIMIT=10
BASIC_PLAN_POST_LIMIT=50
PRO_PLAN_POST_LIMIT=200
ENTERPRISE_PLAN_POST_LIMIT=1000

# AI Credits
FREE_PLAN_AI_CREDITS=50
BASIC_PLAN_AI_CREDITS=200
PRO_PLAN_AI_CREDITS=500
ENTERPRISE_PLAN_AI_CREDITS=2000

# ==============================================
# AWS/CLOUD STORAGE
# ==============================================
# AWS S3 for file storage
AWS_ACCESS_KEY_ID=your-aws-access-key
AWS_SECRET_ACCESS_KEY=your-aws-secret-key
AWS_REGION=us-east-1
AWS_S3_BUCKET=social-automation-uploads

# CloudFlare (optional)
CLOUDFLARE_API_TOKEN=your-cloudflare-token
CLOUDFLARE_ZONE_ID=your-zone-id

# ==============================================
# MONITORING & ANALYTICS
# ==============================================
# Google Analytics
GOOGLE_ANALYTICS_ID=GA-XXXXXXXXX

# Sentry Error Monitoring
SENTRY_DSN=your-sentry-dsn-here

# Application Monitoring
HEALTH_CHECK_INTERVAL=30
METRICS_ENABLED=true

# ==============================================
# FRONTEND ENVIRONMENT VARIABLES
# ==============================================
# Next.js Public Variables (exposed to browser)
NEXT_PUBLIC_API_URL=http://localhost:8000
NEXT_PUBLIC_ENVIRONMENT=development
NEXT_PUBLIC_REGION=US
NEXT_PUBLIC_GOOGLE_ANALYTICS_ID=GA-XXXXXXXXX
NEXT_PUBLIC_SENTRY_DSN=your-frontend-sentry-dsn
NEXT_PUBLIC_FACEBOOK_APP_ID=your-facebook-app-id

# ==============================================
# SCHEDULING & AUTOMATION
# ==============================================
# Posting Schedule Settings
DEFAULT_POSTING_FREQUENCY_HOURS=6
MIN_POSTING_INTERVAL_MINUTES=30
MAX_POSTS_PER_DAY=10
OPTIMAL_POSTING_TIMES_US=9,12,15,18
OPTIMAL_POSTING_TIMES_UK=8,12,17,20

# Content Generation
MAX_CAPTION_LENGTH=2200
MAX_HASHTAGS=30
DEFAULT_CONTENT_TONE=engaging

# ==============================================
# CELERY CONFIGURATION
# ==============================================
CELERY_BROKER_URL=redis://:your-redis-password@localhost:6379/1
CELERY_RESULT_BACKEND=redis://:your-redis-password@localhost:6379/2
CELERY_TIMEZONE=UTC
CELERY_BEAT_SCHEDULE_FILENAME=celerybeat-schedule

# ==============================================
# WEBHOOK SETTINGS
# ==============================================
FACEBOOK_WEBHOOK_VERIFY_TOKEN=your-webhook-verify-token
FACEBOOK_WEBHOOK_SECRET=your-webhook-secret

# ==============================================
# BACKUP & MAINTENANCE
# ==============================================
# Database Backup
DB_BACKUP_ENABLED=true
DB_BACKUP_SCHEDULE="0 2 * * *"  # Daily at 2 AM
DB_BACKUP_RETENTION_DAYS=30

# Log Rotation
LOG_ROTATION_ENABLED=true
LOG_MAX_SIZE_MB=100
LOG_RETENTION_DAYS=14

# ==============================================
# SSL/TLS CERTIFICATES
# ==============================================
# SSL Configuration (for production)
SSL_ENABLED=false
SSL_CERT_PATH=/etc/ssl/certs/fullchain.pem
SSL_KEY_PATH=/etc/ssl/private/privkey.pem

# ==============================================
# PAYMENT INTEGRATION (FUTURE)
# ==============================================
# Stripe (for subscription billing)
STRIPE_PUBLIC_KEY=pk_test_your_stripe_public_key
STRIPE_SECRET_KEY=sk_test_your_stripe_secret_key
STRIPE_WEBHOOK_SECRET=whsec_your_stripe_webhook_secret

# ==============================================
# THIRD-PARTY INTEGRATIONS
# ==============================================
# Zapier (for workflow automation)
ZAPIER_WEBHOOK_URL=your-zapier-webhook-url

# Slack (for notifications)
SLACK_WEBHOOK_URL=your-slack-webhook-url
SLACK_CHANNEL=#social-automation

# Discord (for community)
DISCORD_WEBHOOK_URL=your-discord-webhook-url

# ==============================================
# DEVELOPMENT SETTINGS
# ==============================================
# Only for development environment
RELOAD_ON_CHANGE=true
DEBUG_SQL_QUERIES=false
ENABLE_SWAGGER=true
ENABLE_REDOC=true

# Testing
TEST_DATABASE_URL=postgresql://postgres:test@localhost:5432/social_automation_test
PYTEST_TIMEOUT=300

# ==============================================
# PRODUCTION OVERRIDES
# ==============================================
# These should be overridden in production
# ENVIRONMENT=production
# DEBUG=false
# LOG_LEVEL=WARNING
# RELOAD_ON_CHANGE=false
# ENABLE_SWAGGER=false
# ENABLE_REDOC=false
