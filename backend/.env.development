# ==============================================
# DEVELOPMENT ENVIRONMENT
# ==============================================

# Application
ENVIRONMENT=development
DEBUG=true
LOG_LEVEL=INFO

# Security (development keys - change for production)
SECRET_KEY=dev-secret-key-change-in-production-12345678901234567890
ENCRYPTION_KEY=dev-encryption-key-fernet-compatible-32-bytes-long

# Database (development)
POSTGRES_DB=social_automation_dev
POSTGRES_USER=postgres
POSTGRES_PASSWORD=devpassword123
DATABASE_URL=postgresql://postgres:devpassword123@localhost:5432/social_automation_dev

# Redis (development)
REDIS_PASSWORD=devredis123
REDIS_URL=redis://:devredis123@localhost:6379

# CORS (allow localhost)
CORS_ORIGINS=http://localhost:3000,http://127.0.0.1:3000,http://localhost:8000

# Regional Settings
REGION=US
TIMEZONE_US=America/New_York
TIMEZONE_UK=Europe/London

# AI Services (use your actual API keys)
GEMINI_API_KEY=your-gemini-api-key-here
OPENAI_API_KEY=your-openai-api-key-here

# Facebook API (development app)
FACEBOOK_APP_ID=your-dev-facebook-app-id
FACEBOOK_APP_SECRET=your-dev-facebook-app-secret
FACEBOOK_GRAPH_API_VERSION=v19.0

# Email (development - use test service)
EMAIL_SMTP_HOST=localhost
EMAIL_SMTP_PORT=1025
EMAIL_USERNAME=test@example.com
EMAIL_PASSWORD=testpassword
EMAIL_FROM=dev@localhost

# Rate Limiting (relaxed for development)
RATE_LIMIT_PER_MINUTE=1000
RATE_LIMIT_PER_HOUR=10000

# Frontend URLs
NEXT_PUBLIC_API_URL=http://localhost:8000
NEXT_PUBLIC_ENVIRONMENT=development
NEXT_PUBLIC_REGION=US

# Development Features
RELOAD_ON_CHANGE=true
DEBUG_SQL_QUERIES=true
ENABLE_SWAGGER=true
ENABLE_REDOC=true

# Storage (local development)
AWS_ACCESS_KEY_ID=minioadmin
AWS_SECRET_ACCESS_KEY=minioadmin
AWS_REGION=us-east-1
AWS_S3_BUCKET=social-automation-dev

# Celery
CELERY_BROKER_URL=redis://:devredis123@localhost:6379/1
CELERY_RESULT_BACKEND=redis://:devredis123@localhost:6379/2
